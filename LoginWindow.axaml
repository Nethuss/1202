<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Success.LoginWindow"
        Width="350" Height="250"
        Title="Вход">

    <StackPanel Margin="20" Spacing="10">

        <TextBlock Text="Логин:"/>
        <TextBox Name="LoginBox"/>

        <TextBlock Text="Пароль:"/>
        <TextBox Name="PasswordBox"/>

        <TextBlock Text="Введите капчу:"/>
        <TextBlock Name="CaptchaText"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <TextBox Name="CaptchaBox"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Обновить капчу" Click="RefreshCaptcha_Click"/>
            <Button Content="Войти" Click="Login_Click"/>
        </StackPanel>

        <TextBlock Name="ErrorText" Foreground="Red"/>
    </StackPanel>

</Window>
